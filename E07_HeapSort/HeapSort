 * Equipo 07 - HeapSort
 * Autor(es): Hiram Xool, Aaron Gonzalez
 */
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>

// Función para intercambiar dos elementos
void swap(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

// Función para mantener la propiedad del heap (heapify)
void heapify(int arr[], int n, int i) {
    int largest = i;        // Inicializa el nodo más grande como raíz
    int left = 2 * i + 1;   // Hijo izquierdo
    int right = 2 * i + 2;  // Hijo derecho

    // Si el hijo izquierdo es mayor que la raíz
    if (left < n && arr[left] > arr[largest])
        largest = left;

    // Si el hijo derecho es mayor que el mayor actual
    if (right < n && arr[right] > arr[largest])
        largest = right;

    // Si el mayor no es la raíz
    if (largest != i) {
        swap(&arr[i], &arr[largest]);
        // Aplica heapify recursivamente
        heapify(arr, n, largest);
    }
}

// Función principal de HeapSort
void heapSort(int arr[], int n) {
    // Construir el heap (reorganizar el arreglo)
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i);

    // Extraer los elementos uno por uno del heap
    for (int i = n - 1; i > 0; i--) {
        // Mover la raíz actual al final
        swap(&arr[0], &arr[i]);

        // Llamar a heapify sobre el heap reducido
        heapify(arr, i, 0);
    }
}

// Función para imprimir el arreglo
void imprimirArreglo(int arr[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

int main() {
    int arr[] = {12, 11, 13, 5, 6, 7};
    int n = sizeof(arr) / sizeof(arr[0]);

    printf("Arreglo original:\n");
    imprimirArreglo(arr, n);

    heapSort(arr, n);

    printf("Arreglo ordenado con HeapSort:\n");
    imprimirArreglo(arr, n);

    return 0;
}